---
import Layout from '@/layouts/layout.astro';
import { Container } from '@/components/container';
import { App } from '@/components/app';

import { projects } from '@/data/projects';
import Footer from '@/components/footer.astro';
import { padNumber } from '@/helpers/number';
---

<Layout>
  <Container>
    <div class="grid">
      <section class="hero">
        <div class="logo">
          <img alt="Gitscovery Logo" src="/logo.svg" />
          <div class="corner"></div>
          <div class="corner"></div>
          <div class="corner"></div>
          <div class="corner"></div>
        </div>
        <h1>Gitscovery</h1>
        <p class="desc">Discover open-source projects.</p>
        <p class="archive">
          Containing <span>{padNumber(projects.length, 5)}</span> projects.
        </p>
      </section>
      <App client:load projects={projects} />
      <Footer />
    </div>
  </Container>
</Layout>

<style>
  .grid {
    min-height: 100dvh;
    padding-top: 20px;
    background-color: #fff;
    background-image: linear-gradient(
        var(--color-neutral-100) 1px,
        transparent 1px
      ),
      linear-gradient(
        to right,
        var(--color-neutral-100) 1px,
        var(--color-neutral-50) 1px
      );
    background-position: center;
    background-size: 20px 20px;
    border: 1px solid var(--color-neutral-300);
    border-top: none;
    border-bottom: none;
  }

  .hero {
    padding: 100px 0 60px;
    text-align: center;
    background: var(--color-neutral-50);
    border-radius: 9999px 9999px 0 0;
    box-shadow: inset 0 2px 0 var(--color-neutral-300);

    & .logo {
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 48px;
      height: 48px;
      margin: 0 auto 16px;
      border: 1px solid var(--color-neutral-200);

      & img {
        display: block;
        width: 28px;
        aspect-ratio: 1 / 1;
      }

      &::before,
      &::after {
        position: absolute;
        left: 50%;
        width: 160px;
        height: 1px;
        content: '';
        background: linear-gradient(
          90deg,
          transparent,
          var(--color-neutral-200),
          transparent
        );
        transform: translateX(-50%);
      }

      &::before {
        top: -1px;
      }

      &::after {
        bottom: -1px;
      }

      & .corner {
        position: absolute;
        z-index: 2;
        width: 5px;
        height: 5px;
        background-color: transparent;
        border: 1px solid var(--color-neutral-400);

        &:nth-of-type(1) {
          top: -1px;
          left: -1px;
          border-right: none;
          border-bottom: none;
        }

        &:nth-of-type(2) {
          bottom: -1px;
          left: -1px;
          border-top: none;
          border-right: none;
        }

        &:nth-of-type(3) {
          right: -1px;
          bottom: -1px;
          border-top: none;
          border-left: none;
        }

        &:nth-of-type(4) {
          top: -1px;
          right: -1px;
          border-bottom: none;
          border-left: none;
        }
      }
    }

    & h1 {
      font-family: var(--font-display);
      font-size: var(--font-xlg);
    }

    & .desc {
      margin-top: 8px;
      font-size: var(--font-sm);
      color: var(--color-foreground-subtle);
    }

    & .archive {
      margin-top: 8px;
      font-size: var(--font-sm);
      color: var(--color-foreground-subtler);

      & span {
        font-family: var(--font-mono);
        color: var(--color-foreground-subtle);
      }
    }
  }
</style>
